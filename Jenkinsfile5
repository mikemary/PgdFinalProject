pipeline{
    tools{
        maven 'mymaven'
        jdk 'openJDK8'
    }
    agent any
    
    stages{
        stage('Checkout on git'){
            agent any
            steps{
                git 'https://github.com/mikemary/PgdFinalProject.git'
            }
        }
        stage('Compile'){
            agent any
            steps{
                sh 'mvn compile'
            }
        }
        
        stage('UnitTest'){
            steps{
                sh 'mvn test'
            }
        }
        
        stage('Package'){
            steps{
                sh 'mvn package'
            }
        }
        stage('Building image') {
            steps{
                script {
                    sh 'docker build -t abctechnologies:$BUILD_NUMBER  .'
        
                }
           }
        }
    }
}
